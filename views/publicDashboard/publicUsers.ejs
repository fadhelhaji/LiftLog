<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Chewy&family=Pixelify+Sans:wght@700&family=VT323&display=swap" rel="stylesheet">
</head>

<body>
  <div class="navbar-container">
    <div class="navbar"><%- include('../partials/_navbar.ejs') %></div>
  </div>
  <div class="logo-container">
    <div class="lift-log-logo"><img class="logo-image" src="/Images/LiftLog-removebg-preview.png" alt="LiftLog-logo"></div>
  </div>
  <div class="welcome-text-container">
    <div class="welcome-text">
      <% if (user) { %>
        <h1> <span class="welcome-msg">Welcome to the app,</span> <span class="ifUser">
            <%= user.name %>!
          </span></h1>
        <% } else { %>
          <span class="ifNotSignedIn-msg"><h1>Log in and take control of your meals and fitness journey.</h1></span>
          <% } %>
            <p class="slogan">"Your journey, your progress, your victory."</p>
    </div>
  </div>

  <div class="explore-container">
    <div class="explore">
      <h2>Explore real fitness journeys from <span class="explore-msg">our community</span></h2>
    </div>
  </div>

  <div class="users-container">
    <% users.forEach(u=> { %>
      <a href="/users/<%= u._id %>" class="user-card-link">
        <div class="user-card">
          <h3>
            <span class="username">
              <%= u.name %>
            </span>
          </h3>
          <p><span class="goal-label">Goal:</span> <span class="goal"><%= u.goal %>
            </span></p>
        </div>
      </a>
      <% }) %>
  </div>
</body>

</html>